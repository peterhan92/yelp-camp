<% include partials/header %>

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp!</h1>
		<p>View our hand-picked campgrounds from all over the world</p>
		<p>
			<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
		</p>
	</div>
</header>

<div class="row campgrounds text-center">
	<% campgrounds.forEach(function(camp) { %>
		<div class="col-sm-6 col-md-3">
			<div class="thumbnail">
				<img src="<%= camp.img %>">
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<p>
					<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<% })%>
</div>

<% include partials/footer %>